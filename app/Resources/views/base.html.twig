<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>ONGR Docs {% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body class="docs {% block body_class %}{% endblock %}">
    <span class="overlay"></span>
    <nav class="main">
        <div class="container">
            <a href="{{ path('app_homepage') }}" class="brand">
                <img src="{{ asset('images/logo.png') }}" height="70" alt="ONGR logo">
            </a>

            <ul class="main-nav">
                <li class="nav-docs"><a href="{{ path('app_homepage') }}">Documentation</a></li>
                <li class="nav-ongr-io"><a href="http://ongr.io" target="_blank">ONGR.io</a></li>
                <li class="nav-github"><a href="https://github.com/ongr-io" target="_blank">Github</a></li>
            </ul>
        </div>
    </nav>

    <div class="docs-wrapper container">

        <section class="sidebar">
            <ul>
                {% block sidebar %}
                {{ render(controller('AppBundle:Sidebar:tree')) }}
                {% endblock %}
            </ul>
        </section>

        {#Disabled until it will be implemented#}
        {#<div id="search">#}
            {#<div id="search-wrapper">#}
                {#<input placeholder="" type="text" id="search-input"/>#}
                {#<i class="search-icon"></i>#}
            {#</div>#}
        {#</div>#}

        {% block body %}
        {% endblock %}
    </div>

    <script src="{{ asset('js/script.js') }}"></script>
    {% block javascripts %}{% endblock %}
